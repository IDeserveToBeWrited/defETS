traffic_vehicle : traffic.fox_tipper
{
	accessories[]: .fox_tipper.chassis
	accessories[]: .fox_tipper.fwheel
	accessories[]: .fox_tipper.rwheel

	max_speed: 80

	vehicle_mass: 20000
	engine_power: 200

	sound_move[]: "/sound/traffic/truck_eu_2.soundref"
	sound_move[]: "/sound/traffic/truck_eu_4.soundref"
	sound_horn[]: "/sound/traffic/truck_horn_4.soundref"
	sound_horn[]: "/sound/traffic/truck_horn_5.soundref"



	color[]: (0.4508, 0.0, 0.0024) # red
	color[]: (0.0074, 0.1421, 0.0856) # green
	color[]: (0.7407, 0.4317, 0.0667) # ochre

	variant[]: traffic.fox_tank

	spawn_ratio: 0.5

@include "drivers_generic.sui"
}

vehicle_accessory: .fox_tipper.chassis
{
	data_path: "/def/vehicle/ai/fox/chassis_tipper.sii"
}

vehicle_wheel_accessory: .fox_tipper.fwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/fox_front.sii"
}

vehicle_wheel_accessory: .fox_tipper.rwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/fox_rear.sii"
}


