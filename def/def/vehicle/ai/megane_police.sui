traffic_vehicle : traffic.megane.pol_fr_gen
{
	accessories[]: .megane.pol_fr_gen.chassis
	accessories[]: .megane.pol_fr_gen.fwheel
	accessories[]: .megane.pol_fr_gen.rwheel

	max_speed: 160

	vehicle_mass: 1800

	sound_move[]: "/sound/traffic/car_diesel_2.soundref"
	sound_move[]: "/sound/traffic/car_normal_3.soundref"

	spawn_ratio: 0

	prefer_variant: true
	
	variant[]: traffic.megane.pol_fr

	

@include "drivers_generic_police.sui"
}

vehicle_accessory: .megane.pol_fr_gen.chassis
{
	data_path: "/def/vehicle/ai/megane/chassis_fr_gen.sii"
}

vehicle_wheel_accessory: .megane.pol_fr_gen.fwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/front_16in_4.sii"
}

vehicle_wheel_accessory: .megane.pol_fr_gen.rwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/rear_16in_4.sii"
}



traffic_vehicle : traffic.megane.pol_fr
{
	accessories[]: .megane.pol_fr.chassis
	accessories[]: .megane.pol_fr.fwheel
	accessories[]: .megane.pol_fr.rwheel

	max_speed: 160

	vehicle_mass: 1800

	sound_move[]: "/sound/traffic/car_diesel_2.soundref"
	sound_move[]: "/sound/traffic/car_normal_3.soundref"

	spawn_condition[]: .megane.pol_fr.condition.city

