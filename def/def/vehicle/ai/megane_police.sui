vehicle_accessory: .megane.pol_fr.chassis
{
	data_path: "/def/vehicle/ai/megane/chassis_fr.sii"
}

vehicle_wheel_accessory: .megane.pol_fr.fwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/front_16in_2.sii"
