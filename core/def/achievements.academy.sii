# -- Academy module --

# Complete the first scenario of the first chapter in Truck Driving Basics.

achievement_academy : .achievement.aca_first
{
	gameplay: academy
	event_name: aca_log_entr
	initial_check: true
	condition: .aca_first.condition

	achievement_name: aca_first

	steam_id: aca_first
}

achievement_academy_each : .aca_first.condition
{
	list[]: .aca_first.completed
	list[]: .aca_first.scenario
}

achievement_academy_scenario_state : .aca_first.completed
{
	result: completed
}

achievement_academy_scenario : .aca_first.scenario
{
	scenario_name: academy.scenario.book1.1_01
}

