}

# View cutscenes from at least 8 viewpoints in West Balkans.

achievement_trigger_data : .achievement.bw_cutscenes
{
	event_name: trig_activat
	initial_check: true
	trigger_param: bw_cutscenes
	target: 8

	achievement_name: bw_cutscenes

	steam_progress_id: "bw_cutscenes-progress"
	steam_id: bw_cutscenes
}

# Complete a perfect delivery (no damage, no fines, in-time) between Pristina and Bijelo Polje.

achievement_each_delivery_point : .achievement.bw_pris_bije
{
	event_name: job_done
	initial_check: true
	both_directions: true
	damage_max: 0.0
	fines_max: 0
	late: false
	sources[]: .bw_pris_bije.bijelo_polje
	targets[]: .bw_pris_bije.pristina
	target: 1

	achievement_name: bw_pristina_bijelo_polje

	steam_id: bw_pristina_bijelo_polje
}

achievement_delivery_city : .bw_pris_bije.bijelo_polje
{
	city_name: bijelo_polje
}

achievement_delivery_city : .bw_pris_bije.pristina
{
	city_name: pristina
}

# Complete 3 deliveries along the coast in this order: Rijeka - Zadar - Split - Niksic.

achievement_delivery : .achievement.bw_coastline
{
	event_name: job_done
	initial_check: true
	condition: .bw_coastline.condition
	target: 3

	achievement_name: bw_coastline

	steam_progress_id: "bw_coastline-progress"
	steam_id: bw_coastline
}

achievement_delivery_sequence : .bw_coastline.condition
{
	in_order: true

	list[]: .bw_coastline.rijeka.zadar
	list[]: .bw_coastline.zadar.split
	list[]: .bw_coastline.split.niksic
}

achievement_delivery_each : .bw_coastline.rijeka.zadar
{
	list[]: .bw_coastline.rijeka.zadar.source
	list[]: .bw_coastline.rijeka.zadar.target
}

achievement_delivery_point_city : .bw_coastline.rijeka.zadar.source
{
	role: source
	city_name: rijeka
}

achievement_delivery_point_city : .bw_coastline.rijeka.zadar.target
{
	role: target
	city_name: zadar
}

