# Take an urgent delivery for a minimum of 550 km and complete it with less than 30 minutes remaining.

achievement_delivery_log_data : .achievement.job_urgent
{
	event_name: job_done
	distance_min: 550
	remaining_time_max: 30
	late: false
	urgency: urgent

	achievement_name: job_urgent

	steam_id: job_urgent
}

