
traffic_vehicle : traffic.dr1_lt
{
	accessories[]: .dr1_lt.chassis
	accessories[]: .dr1_lt.fwheel
	accessories[]: .dr1_lt.rwheel

	max_speed: 120

	vehicle_mass: 170000	# 340t train
	engine_power: 1472	# 2x736kW

	trailer_chains[]: "train_car.dr1_car_lt 2-4 | train_car.dr1_last_lt"

	sound_move[]: "/sound/traffic/train_diesel.soundref"

	displacement_limit: 0.0

	spawn_ratio: 0.0

	lod_dist[]: 70
	lod_dist[]: 130
	lod_dist[]: 200
}

vehicle_accessory: .dr1_lt.chassis
{
	data_path: "/def/vehicle/ai/train_dr1/chassis_f_lit.sii"
}

vehicle_wheel_accessory: .dr1_lt.fwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/front_empty_50cm.sii"
}

vehicle_wheel_accessory: .dr1_lt.rwheel
{
	offset: 0
	data_path: "/def/vehicle/ai_wheel/rear_empty_50cm.sii"
}



